<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>AWS Drive</title>
        <style>
            body {
                font-family: Arial, Helvetica, sans-serif;
                font-size: 1.5rem;
                background-color: #333;
                color: whitesmoke;
            }
    
            input,
            button {
                font: inherit;
                width: max-content;
            }
    
            form {
                display: flex;
                flex-flow: column nowrap;
                gap: 1.5rem;
            }
            tr {
              padding: 20px;
            }
            td {
              padding: 10px
            }
        </style>
    </head>
    <body>
        <h1>AWS Storage</h1>
        <form action="fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="filetoupload"><br>
        <input type="submit">
        </form>
        <table class="table">
            <thead>
              <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date</th>
                <!-- <th>Action</th> -->
              </tr>
            </thead>
            <tbody>
              <% if(data !== undefined && data.length){ for(var i = 0; i< data.length; i++) {%>
              <tr>
                <th scope="row"><%= (i+1) %></th>
                <td><%= data[i].Key%></td>
                <td><%= data[i].LastModified.toISOString().replace(/T/, ' ').replace(/\..+/, '')%></td>
                <!-- <td><a href="/file/<%= i%>">Télécharger</a></td> -->
              </tr>
              <% } }else{ %>
              <tr>
                <td>No data</td>
              </tr>
              <% } %>
            </tbody>
          </table>
    </body>
</html>